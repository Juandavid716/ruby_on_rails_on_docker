<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Twitter</title>
    <%= stylesheet_link_tag 'signup.css' %>  

</head>
<body>
<div class="section">
	<div class="container">
	<div class="columns is-centered">

		<div class="column is-4">
			
		<h2 class="title is-2 is-spaced">Create your account</h2>

		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  	<%= f.error_notification %>

	  	<div class="div__input">
	  		<div class="contraseña">
	    		<%= f.input :name, required: true, autofocus: true, input_html: { class:"form_input" }, wrapper: false, label_html: { class:"label1" } %>
	  		</div>
		</div>

		<div class="div__input">
	  	<div class="contraseña">
	    <%= f.input :username, required: true, input_html: { class:"form_input" }, wrapper: false, label_html: { class:"label1" } %>
	  	</div>
		</div>

		<div class="div__input">
	  	<div class="contraseña">
	    <%= f.input :email, required: true, input_html: { class:"form_input" }, wrapper: false, label_html: { class:"label1" } %>
	  	</div>
		</div>
		
		  
		<div class="div__input">
			<div class="contraseña">
				<%= f.input :password, required: true, input_html: { class:"form_input" }, wrapper: false, label_html: { class:"label1" }, hint: (" #{@minimum_password_length} characters minimum" if @minimum_password_length) %>
			</div>
		</div>

		<div class="div__input">
			<div class="contraseña">
				<%= f.input :password_confirmation, required: true, input_html: { class: "form_input" }, wrapper: false, label_html: { class: "label1" } %>		
			</div>
		</div>
		
		

		<div class="field">
			<div class="control">
		 		<%= f.button :submit, "Sign up", class:"button is-info is-medium is-rounded", style:"margin-top:25px;" %>
		 	</div>
		</div>

		<% end %>
			<br />
			<%= render "devise/shared/links" %>
		</div>
		</div>
	</div>
</div>
<body>