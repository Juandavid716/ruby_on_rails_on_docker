<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Twitter</title>
    <%= stylesheet_link_tag 'signup.css' %>  
    <%= javascript_pack_tag 'my_js'%>
</head>
<body>
<div class="section">
	<div class="container">
	<div class="columns is-centered">

		<div class="column is-4">
			<%= image_tag 'https://i.ibb.co/QJ72cHP/twitter-48.png', width: 32, height: 32, alt: 'twitter', class: "center-img"%>
		<h2 class="title is-2 is-spaced center">Log In</h2>

	 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  	

	  		<div class="div__input">
          <div class="contraseña">
          <%= f.label :email %><br />
           <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form__input" %>
          </div>
		    </div>
  
		  
        <div class="div__input">
          <div class="contraseña">
          <%= f.label :password %><br />
             <%= f.password_field :password, autocomplete: "current-password" , class:"form__input" %>
          </div>
        </div>

        

        <div class="field">
          <div class="control">
              <%= f.submit "Log in" , class:"button is-info is-medium is-rounded", style:"margin-top:25px;"%>
          </div>
        </div>

		<% end %>
			<br />
			<%= render "devise/shared/links" %>
		</div>
		</div>
	</div>
</div>
<body>  
<%= javascript_pack_tag 'my_js'%>
