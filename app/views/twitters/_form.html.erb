<head>
<%= stylesheet_link_tag 'feed.css' %> 
</head>
<%= simple_form_for(@twitter) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :twitter, label: "Tweet about it", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label has-text-grey-lighter"}, placeholder: "Compose a new tweet...", autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-info is-rounded " %>
<% end %>