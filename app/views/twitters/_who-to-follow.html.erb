<head>
<%= stylesheet_link_tag 'landingpage.css' %> 
<%= javascript_pack_tag 'my_js'%>
</head>

<div class="column is-3">
	<nav class="panel derecha">
	<div class="panel-block" style="border-color: #9c9c9c">
		<article class="media">
			<p class="subtitle is-4 has-text-grey-lighter has-text-weight-bold">Seguidores</p>
		</article>
	</div>
	
		
		<% @relationships.each do | relationship | %>
		<% if user_signed_in? && current_user.id == relationship.followed_id && User.find_by_id(relationship.follower_id).id != current_user.id%>
		<div class="panel-block" style="border-color: #9c9c9c">
		
			<article class="media">
				<div class="media-left">
					<figure class="image is-32x32 ">
						<img src="https://pbs.twimg.com/profile_images/1284197749030887429/7n6w-Urk_400x400.jpg">
						
					</figure>
				</div>
				<div class="media-content">
					<div class="content">
						<p class="has-text-grey-lighter">
						
						
								<strong class="has-text-grey-lighter"><%= User.find_by_id(relationship.follower_id).name %></strong>
								<small>@<%= User.find_by_id(relationship.follower_id).username %></small>
							
				
						
						</p>
					</div>
				</div>
			</article>
		</div>
			<% end %>	
			<% end %>
		
	</nav>
	<div class="panel-block" style="border-color: #9c9c9c">
		<article class="media">
			<p class="subtitle is-4 has-text-grey-lighter has-text-weight-bold">Siguiendo</p>
		</article>
	</div>
		
		<% @relationships.each do | relationship | %>
		<% if user_signed_in? && User.find_by_id(relationship.follower_id).id == current_user.id%>
		<div class="panel-block" style="border-color: #9c9c9c">
		
			<article class="media">
				<div class="media-left">
					<figure class="image is-32x32 ">
						<img src="https://pbs.twimg.com/profile_images/1284197749030887429/7n6w-Urk_400x400.jpg">
						
					</figure>
				</div>
				<div class="media-content">
					<div class="content">
						<p class="has-text-grey-lighter">
						
						
								<strong class="has-text-grey-lighter"><%= User.find_by_id(relationship.followed_id).username%></strong>
								<small>@<%= User.find_by_id(relationship.followed_id).username %></small>
							
				
						
						</p>
					</div>
				</div>
			</article>
		</div>
			<% end %>	
			<% end %>
</div>