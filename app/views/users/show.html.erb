<head>
<%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/icon?family=Material+Icons'	%>
<%= stylesheet_link_tag 'feed.css' %> 
<%= stylesheet_link_tag 'landingpage.css' %> 
</head>


<section class="section">
  <div class="container">
    <div class="columns is-centered">
						
<div class="column is-2">

<nav class="panel">
	<article class="media">
	
		<div class="media-content">
			<div class="content">
				<%= link_to root_path do %>
    			<%= image_tag 'https://i.ibb.co/QJ72cHP/twitter-48.png', width: 32, height: 32, alt: 'twitter'%>
				<% end %>
			
			</div>
		</div>
	</article>
	<article class="media">
		<div class="media-left">
			<i class="large material-icons">home</i>
		</div>
		<div class="media-content">
			<div class="content">
				<%= link_to 'Inicio', root_path, class: "subtitle is-5 has-text-grey-lighter has-text-weight-bold"%>
			
			</div>
		</div>
	</article>
	<article class="media">
		<div class="media-left">
		<i class="large material-icons">explore</i>
		</div>
		<div class="media-content">
			<div class="content">
			<p class="subtitle is-5 has-text-grey-lighter has-text-weight-bold">Explorar</p>
			</div>
		</div>
	</article>
	<article class="media">
		<div class="media-left">
			<i class="large material-icons">notifications</i>
		</div>
		<div class="media-content">
			<div class="content">
				<p class="subtitle is-5 has-text-grey-lighter has-text-weight-bold">Notificaciones</p>
			</div>
		</div>
	</article>
	<article class="media">
		<div class="media-left">
			<i class="large material-icons">archive</i>
		</div>
		<div class="media-content">
			<div class="content">
				<p class="subtitle is-5 has-text-grey-lighter has-text-weight-bold">Guardados</p>
			</div>
		</div>
	</article>
	<article class="media">
		<div class="media-left">
			<i class="large material-icons">list</i>
		</div>
		<div class="media-content">
			<div class="content">
			<p class="subtitle is-5 has-text-grey-lighter has-text-weight-bold">Listas</p>
			</div>
		</div>
	</article>
	<article class="media">
		<div class="media-left">
			<i class="large material-icons">person</i>
		</div>
		<div class="media-content">
			<div class="content">
			<%= link_to 'Perfil', profile_path, class: "subtitle is-5 has-text-grey-lighter has-text-weight-bold"%>
			
				<%# <p class="subtitle is-5 has-text-grey-lighter has-text-weight-bold">Perfil</p> %>
			</div>
		</div>
	</article>
	<article class="media">
		<div class="media-left">
			<i class="large material-icons">more</i>
		</div>
		<div class="media-content">
			<div class="content">
				<p class="subtitle is-5 has-text-grey-lighter has-text-weight-bold">Mas Opciones</p>
			</div>
		</div>
	</article>
	<article class="media">
		<div class="media-left">
			<span class="material-icons">
				power_settings_new
			</span>
		</div>
		<div class="media-content">
			<div class="content">
			<%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete, class:"subtitle is-5 has-text-grey-lighter has-text-weight-bold" %>
			
			</div>
		</div>
	</article>
</nav>
</div>
		

<div class="column is-5 scrolling">
<nav class="panel" id="infoprofile">
		<img src="https://i.pinimg.com/originals/0a/f6/47/0af647192fce6f0e0883dc5107cc00e8.jpg">
		<div class="panel-block" style="border:none">
			<article class="media">
				<div class="media-left">
					<figure class="image is-64x64">
						<%= gravatar_image_tag(@user.email, size: 68, alt: @user.name) %>
					</figure>
				</div>
				<div class="media-content">
					<div class="content">
						<p class=" has-text-grey-lighter">
							<strong class=" has-text-grey-lighter"><%= @user.name %></strong><br />
							<small> @<%= @user.username %></small>
						</p>
					</div>
				</div>
			</article>
		</div>
		<div class="panel-block" style="border:none;">
			<div class="level-item has-centered-text">
				<div class"location-icon">
					<p class="has-text-grey-lighter"><i class="material-icons">location_on</i> Barranquilla, Atlantico</p>	
				</div>
			</div>
			<div class="level-item has-centered-text">
				<div>
				<p class="has-text-grey-lighter"><i class="material-icons">date_range</i>Se unió en <%= @user.created_at.strftime("Septiembre %d, %Y") %></p>
				</div>
			</div>
		</div>
		<div class="panel-block">				
			<div class="level is-mobile">
				
				<div class="level-item has-centered-text">
					<div>
						<p class="subtitle is-6  has-text-grey-lighter">Tweets <span class="has-text-grey-lighter has-text-weight-semibold"><%= @user.twitters.count %></p>
					</div>
				</div>
				<div class="level-item has-centered-text">
					<div>
						<p class="subtitle is-6  has-text-grey-lighter">Following <span class="has-text-grey-lighter has-text-weight-semibold">0</span></p>
					</div>
				</div>
					<div class="level-item has-centered-text">
					<div>
						<p class="subtitle is-6  has-text-grey-lighter">Followers <span class="has-text-grey-lighter has-text-weight-semibold">200</span></p>
					</div>
					<div>
						  <%= link_to "Edit Perfil", edit_user_registration_path, class: "button is-info is-rounded edit-profile"%>
					</div>
					<%= render 'follow_button', :user => User.find_by_username(params[:id]) %>
				</div>
			</div>
		</div>
	</nav>

<%@user.twitters.each  do | twitter | %>
	<% if user_signed_in? && current_user.id == twitter.user_id %> 
	<div class="box contenido">
   	  
  	<article class="media">
	  
	 	<div class="media-left">
  			<figure class="image is-64x64">
  				<%= gravatar_image_tag(twitter.user.email, size: 64, alt: twitter.user.name) %>
  			</figure>
  		</div>
  		<div class="media-content">
  			<div class="content">
  				<strong class="has-text-grey-lighter"><%= twitter.user.name %></strong><br />
  				<small class="has-text-grey-lighter">@<%= twitter.user.username %></small><br/>
  				<p class="has-text-grey-lighter"><%= twitter.twitter %></p>
  			</div>
        
  			<nav class="level">
  				<div class="level-left is-mobile">
  				
  					  <% if current_user.email ==  @user.email %>

  					  <%= link_to twitter, method: :delete, data: { confirm: "Are you sure you want to delete this tweet?" } do %>
						<span class="icon"><i id="delete" class="material-icons" aria-hidden="true">delete</i></span>
					  <% end %>
                      <% end %>
  				</div>
  			</nav>
        
		  </div>
		  
	  </article>
	  
  </div>
  <% end %>
<% end %>
</div>
			
<div class="column is-3">
	<nav class="panel derecha">
	<div class="panel-block right-panel">
		<article class="media">
			<p class="subtitle is-4 has-text-grey-lighter has-text-weight-bold">Who to follow</p>
		</article>
	</div>
	
	
		<div class="panel-block right-panel">
			<article class="media">
				<div class="media-left">
					<figure class="image is-32x32 ">
						<img src="https://pbs.twimg.com/profile_images/1284197749030887429/7n6w-Urk_400x400.jpg">
						
					</figure>
				</div>
				<div class="media-content">
					<div class="content">
						<p class="has-text-grey-lighter">
							<strong class="has-text-grey-lighter">Real Madrid</strong>
							<small>@realmadrid</small>
						</p>
					</div>
				</div>
			</article>
		</div>
		<div class="panel-block right-panel">
		<article class="media">
			<div class="media-left">
				<figure class="image is-32x32 ">
					<img src="https://pbs.twimg.com/profile_images/1291131477162434563/7_CvM9U6_400x400.jpg"> 
					
				</figure>
			</div>
			<div class="media-content">
				<div class="content">
					<p class="has-text-grey-lighter">
						<strong class="has-text-grey-lighter">FC Barcelona</strong>
						<small>@FCBarcelona</small>
					</p>
				</div>
			</div>
		</article>
	</div>
		<div class="panel-block" >
		<article class="media">
			<div class="media-left">
				<figure class="image is-32x32">
					<img src="https://pbs.twimg.com/profile_images/1157313327867092993/a09TxL_1_400x400.jpg">
				</figure>
			</div>
			<div class="media-content">
				<div class="content">
					<p class=" has-text-grey-lighter">
						<strong class=" has-text-grey-lighter">Cristiano Ronaldo</strong>
						<small>@Cristiano</small>
					</p>
				</div>
			</div>
		</article>
	</div>
	</nav>
</div>


    </div>
  </div>
</section>
